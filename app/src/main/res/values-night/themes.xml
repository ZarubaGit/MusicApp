<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PlaylistMaker" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/YP_Black</item>
        <item name="colorPrimaryVariant">@color/YP_Blue</item>
        <item name="colorOnPrimary">@color/YP_White</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/YP_White</item>
        <item name="colorSecondaryVariant">@color/YP_Black</item>
        <item name="colorOnSecondary">@color/YP_Black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/YP_Black</item>
    </style>

    <style name="Theme.PlaylistMaker" parent="Base.Theme.PlaylistMaker" />

    <style name="ColorIconEditText">
        <item name="tint">@color/YP_Black</item>
    </style>

    <style name="delete_icon">
       <item name = "tint">@color/YP_Black</item>
    </style>

    <style name="colorDot">
        <item name = "tint">@color/YP_White</item>
    </style>

    <style name="artistTextColor">
        <item name = "android:textColor">@color/YP_White</item>
    </style>

    <style name="TextInputLayoutAppearance" parent="Widget.Design.TextInputLayout">
        <item name="colorControlActivated">@color/YP_Blue</item>
    </style>

    <style name="AlertDialogButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/YP_White</item>
        <item name="android:textSize">@dimen/textForArtistName</item>
    </style>


</resources>