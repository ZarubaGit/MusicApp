<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/YP_Blue"
    android:orientation="vertical"
    android:padding="15dp">


    <TextView
        android:id="@+id/nameApp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ys_display_medium"
        android:text="@string/title"
        android:textColor="@color/YP_White"
        android:textSize="22sp" />


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="24dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/buttonSearch"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/YP_White"
            android:fontFamily="@font/ys_display_medium"
            android:text="@string/name_search"
            android:textAllCaps="false"
            android:textColor="@color/YP_Black"
            android:textSize="@dimen/text_size"
            app:cornerRadius="@dimen/buttonCorner"
            app:icon="@drawable/vector"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:iconTint="@color/YP_Black"
            android:foreground="?attr/selectableItemBackground"
            android:layout_height="0dp"/>


        <Button
            android:id="@+id/buttonMedia"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/betweenButton"
            android:layout_weight="1"
            android:backgroundTint="@color/YP_White"
            android:fontFamily="@font/ys_display_medium"
            android:text="@string/name_media"
            android:textAllCaps="false"
            android:textColor="@color/YP_Black"
            android:textSize="@dimen/text_size"
            app:cornerRadius="@dimen/buttonCorner"
            app:icon="@drawable/mediateka"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:iconTint="@color/YP_Black"
            android:foreground="?attr/selectableItemBackground"/>

        <Button
            android:id="@+id/buttonSetting"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/betweenButton"
            android:layout_marginBottom="0dp"
            android:layout_weight="1"
            android:backgroundTint="@color/YP_White"
            android:fontFamily="@font/ys_display_medium"
            android:text="@string/name_setting"
            android:textAllCaps="false"
            android:textColor="@color/YP_Black"
            android:textSize="@dimen/text_size"
            app:cornerRadius="@dimen/buttonCorner"
            app:icon="@drawable/group2"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:iconTint="@color/YP_Black"
            android:foreground="?attr/selectableItemBackground"/>



    </LinearLayout>


    </LinearLayout>