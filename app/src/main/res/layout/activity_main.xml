<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/YP_Blue"
    android:orientation="vertical"
    android:padding="15dp">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ys_display_medium"
        android:text="@string/title"
        android:textColor="@color/YP_White"
        android:textSize="22sp" />
    </FrameLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="24dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/button1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:layout_weight="1"
            android:backgroundTint="@color/YP_White"
            android:fontFamily="@font/ys_display_medium"
            android:text="@string/name_search"
            android:textAllCaps="false"
            android:textColor="@color/YP_Black"
            android:textSize="@dimen/text_size"
            app:cornerRadius="20dp"
            app:icon="@drawable/vector"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:iconTint="@color/YP_Black"
            android:foreground="?attr/selectableItemBackground"/>


        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height"
            android:layout_marginStart="0dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="0dp"
            android:layout_weight="1"
            android:backgroundTint="@color/YP_White"
            android:fontFamily="@font/ys_display_medium"
            android:text="@string/name_media"
            android:textAllCaps="false"
            android:textColor="@color/YP_Black"
            android:textSize="@dimen/text_size"
            app:cornerRadius="20dp"
            app:icon="@drawable/mediateka"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:iconTint="@color/YP_Black"
            android:foreground="?attr/selectableItemBackground"/>

        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height"
            android:layout_marginStart="0dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            android:layout_weight="1"
            android:backgroundTint="@color/YP_White"
            android:fontFamily="@font/ys_display_medium"
            android:text="@string/name_setting"
            android:textAllCaps="false"
            android:textColor="@color/YP_Black"
            android:textSize="@dimen/text_size"
            app:cornerRadius="20dp"
            app:icon="@drawable/group2"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:iconTint="@color/YP_Black"
            android:foreground="?attr/selectableItemBackground"/>



    </LinearLayout>


    </LinearLayout>