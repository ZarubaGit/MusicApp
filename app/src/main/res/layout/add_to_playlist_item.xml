<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:padding="8dp"
    android:foreground="?attr/selectableItemBackground">

    <ImageView
        android:id="@+id/placeholderPlayList"
        android:layout_width="@dimen/imageSize"
        android:layout_height="@dimen/imageSize"
        android:layout_gravity="start|center"
        android:src="@drawable/placeholder" />

    <TextView
        android:id="@+id/playlistNameTextView"
        style="@style/Base.Theme.PlaylistMaker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/searchBarMargin"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/ys_display_regular"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/playlist_name"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:layout_marginStart="@dimen/searchBarMargin"
        android:layout_marginEnd="36dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/countsTrack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ys_display_regular"
            android:text="@string/counts_track"
            android:theme="@style/artistTextColor"
            android:textSize="@dimen/textForArtistName" />

    </LinearLayout>



</FrameLayout>
