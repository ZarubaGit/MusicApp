<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PlaylistMaker" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/YP_White</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/YP_Black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/YP_Blue</item>
        <item name="colorSecondaryVariant">@color/YP_Text_Gray</item>
        <item name="colorOnSecondary">@color/YP_White</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>
    <style name="Theme.PlaylistMaker" parent="Base.Theme.PlaylistMaker" />
</resources>