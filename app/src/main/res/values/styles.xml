<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="StyleFromBackgroundSettingActivity">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/YP_White</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">15dp</item>
    </style>

    <style name="StrelochkaBack">
        <item name="android:layout_width">@dimen/iconSize</item>
        <item name="android:layout_height">@dimen/iconSize</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:importantForAccessibility">no</item>
    </style>

    <style name="StyleFromBackgroundMainActivity">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">15dp</item>
        <item name="android:background">@color/YP_Blue</item>
    </style>

    <style name="TextFromToolBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/YP_Black</item>
    </style>

    <style name="textMediatekaToolBar">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/dimen22sp</item>
    </style>

    <style name="ToolBarSetting">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/YP_White</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="GuideLines">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:orientation">vertical</item>
    </style>

    <style name="ImagePlaylist">
        <item name="android:src">@drawable/placeholder_playlist</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginTop">26dp</item>
        <item name="android:background">@drawable/punktir_line_playlist_added</item>
    </style>

    <style name="InputLayoutPlaylist" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">?attr/colorOnPrimary</item>
        <item name="boxStrokeColor">@color/tap_color_selector</item>
        <item name="hintTextColor">@color/tap_color_selector</item>

    </style>
    <style name="InputTextPlaylist">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_size_setting</item>
        <item name="android:textCursorDrawable">@drawable/cursor_color_day</item>
        <item name="android:colorControlActivated">@color/YP_Black</item>
    </style>

    <style name="createPlayList">
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_setting</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/YP_White</item>
        <item name="android:maxLines">1</item>
        <item name="android:enabled">false</item>
    </style>

    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="materialAlertDialogTitleTextStyle">@style/MaterialAlertDialogTitleText</item>
        <item name="materialAlertDialogBodyTextStyle">@style/MaterialAlertDialogBodyText</item>
        <item name="buttonBarPositiveButtonStyle">@style/AlertDialogButtonStyle</item>
        <item name="buttonBarNeutralButtonStyle">@style/AlertDialogButtonStyle</item>
    </style>


    <style name="MaterialAlertDialogTitleText" parent="@style/MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>
    <style name="MaterialAlertDialogBodyText" parent="@style/MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:singleLine">false</item>
        <item name="android:maxLines">5</item>
    </style>

    <style name="FrameForSettingActivity">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/frame_setting_height</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/YP_White</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/YP_Black</item>
        <item name="android:textSize">@dimen/dimen22sp</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="TextStyleForSetting">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/spaceFromStartFrameLayout</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_size_setting</item>
        <item name="android:textColor">@color/YP_Black</item>
    </style>

    <style name="IconStyleForSetting">
        <item name="android:layout_width">@dimen/iconSize</item>
        <item name="android:layout_height">@dimen/iconSize</item>
        <item name="android:layout_gravity">end|center</item>
        <item name="tint">@color/YP_Text_Gray</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="IconStyleForItemTrack">
        <item name="android:layout_width">@dimen/iconSize</item>
        <item name="android:layout_height">@dimen/iconSize</item>
        <item name="android:layout_gravity">end|center</item>
        <item name="tint">@color/YP_Text_Gray</item>

    </style>

    <style name="Switch">
        <item name="android:layout_gravity">end|center</item>
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">48dp</item>

    </style>

    <style name="StyleEditText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:background">@null</item>
        <item name="android:backgroundTint">@color/YP_Light_Gray</item>
        <item name="android:textColor">@color/YP_Black</item>
        <item name="android:textColorHint">@color/YP_Text_Gray</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:hint">@string/search</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>

    </style>

    <style name="StyleForIconSearch">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:foregroundGravity">center</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="BottomNavigation">
        <item name="android:background">?attr/colorSurface</item>
        <item name="backgroundTint">@null</item>
        <item name="itemTextAppearanceInactive">@color/bottom_selector_color</item>
        <item name="itemTextAppearanceActive">@color/bottom_selector_color</item>
        <item name="itemIconTint">@color/bottom_selector_color</item>
        <item name="itemTextColor">@color/bottom_selector_color</item>
        <item name="enforceTextAppearance">true</item>
        <item name="enforceMaterialTheme">true</item>
    </style>

    <style name="refreshButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/refreshButton</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:backgroundTint">?attr/colorOnPrimary</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:layout_marginTop">24dp</item>
    </style>

    <style name="messageForSearchView">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">19sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:gravity">center</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="textPlaylist">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dimen24dp</item>
        <item name="android:textColor">@color/YP_Black</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="PlaylistIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:tint">@color/YP_Black</item>
        <item name="android:layout_marginTop">@dimen/dimen16dp</item>
    </style>

    <style name="BottomSheetLinearLayoutThemed" parent="BottomSheetLinearLayout">
        <item name="android:paddingHorizontal">@dimen/dimen13</item>
    </style>

    <style name="BottomSheetLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/shape_bottom_sheet_color</item>
        <item name="behavior_hideable">true</item>
        <item name="layout_behavior">com.google.android.material.bottomsheet.BottomSheetBehavior</item>
    </style>

    <style name="BottomSheetHandle">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">4dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">@dimen/dimen8dp</item>
        <item name="android:background">@drawable/shape_bottom_sheet_handler</item>
    </style>

    <style name="playlistMenuButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">?attr/colorOnSecondary</item>
        <item name="android:gravity">fill</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:paddingHorizontal">@dimen/dimen16dp</item>
        <item name="android:paddingVertical">@dimen/dimen24dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/dimen16sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

</resources>